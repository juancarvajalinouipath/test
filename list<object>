<div class="main-wrapper">
  <div class="textContainer">
    <div class="empty-msg">Loading services...</div>
  </div>
  <div class="footer-actions">
    <button id="confirmChangesBtn" class="confirm-btn">Confirm All Changes</button>
  </div>
</div>

