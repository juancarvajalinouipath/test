JS
(async function () {
  const container = document.querySelector(".textContainer");
  const confirmBtn = document.querySelector("#confirmChangesBtn");
  
  let currentRootObject = {};
  let currentItems = [];

  async function loadData() {
    const rawDataString = await App.getVariable("str_JsonData") || "";
    try {
      if (rawDataString && rawDataString.trim() !== "") {
        currentRootObject = JSON.parse(rawDataString);
        currentItems = currentRootObject.extracted_services || (Array.isArray(currentRootObject) ? currentRootObject : []);
      }
    } catch (e) {
      container.innerHTML = "<div class='empty-msg'>Error parsing JSON. Check str_JsonData format.</div>";
      return;
    }
    if (currentItems.length === 0) {
      container.innerHTML = "<div class='empty-msg'>No services found.</div>";
      return;
    }
    renderCards();
  }

  // Helper to format currency with thousands separator
  function formatCurrency(input) {
    // Remove everything except numbers and one decimal point
    let value = input.replace(/[^\d.]/g, "");
    let parts = value.split(".");
    
    // Handle the integer part with thousands separator
    if (parts[0]) {
      parts[0] = parseInt(parts[0]).toLocaleString('en-US');
    }
    
    // Limit decimal part to 2 digits
    if (parts.length > 1) {
      parts[1] = parts[1].slice(0, 2);
      return "$" + parts[0] + "." + parts[1];
    }
    
    return value ? "$" + parts[0] : "$";
  }

  function renderCards() {
    container.innerHTML = ""; 
    currentItems.forEach((item, index) => {
      const name = item.nameOfService || "Service Name";
      const date = item.dateOfService || "";
      const conf = item.confidence || "";
      const just = item.justification || "";
      const amount = item.amount || "$0.00";

      const card = document.createElement("div");
      card.className = "service-card";
      card.innerHTML = `
        <div class="card-title">${name}</div>
        <div class="card-row">
          <span class="card-label">Service Date</span>
          <div class="card-input-wrapper">
            <input type="date" class="edit-input date-field" value="${date}">
          </div>
        </div>
        <div class="card-row">
          <span class="card-label">Service Amount</span>
          <div class="card-input-wrapper">
            <input type="text" class="edit-input amount-field" value="${amount}">
          </div>
        </div>
        <div class="card-row">
          <span class="card-label">Confidence Score</span>
          <span class="card-value">${conf}</span>
        </div>
        <div class="card-row">
          <span class="card-label">Justification</span>
          <p class="card-justification">${just}</p>
        </div>
      `;

      const dateInput = card.querySelector(".date-field");
      const amountInput = card.querySelector(".amount-field");

      dateInput.addEventListener("change", () => {
        currentItems[index].dateOfService = dateInput.value;
      });

      amountInput.addEventListener("input", (e) => {
        // Apply the currency mask with separators
        const formatted = formatCurrency(e.target.value);
        e.target.value = formatted;
        currentItems[index].amount = formatted;
      });

      container.appendChild(card);
    });
  }

  confirmBtn.onclick = async () => {
    const updatedJson = JSON.stringify({
      ...currentRootObject,
      extracted_services: currentItems
    });
    await App.setVariable("str_JsonData", updatedJson);
    alert("Changes saved successfully!");
  };

  loadData();
  App.onVariableChange("str_JsonData", () => loadData());
})();

